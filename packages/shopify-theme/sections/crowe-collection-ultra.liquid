<script>
// üéØ Ultra Collection JavaScript
document.addEventListener('DOMContentLoaded', function() {
  let currentView = 'grid';
  let currentSort = 'manual';
  
  // Sort products
  window.sortProducts = function(sortValue) {
    currentSort = sortValue;
    const productGrid = document.getElementById('productGrid');
    const products = Array.from(productGrid.querySelectorAll('.product-item'));
    
    products.sort((a, b) => {
      switch(sortValue) {
        case 'price-ascending':
          return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
        case 'price-descending':
          return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
        case 'title-ascending':
          return a.querySelector('.card-title').textContent.localeCompare(b.querySelector('.card-title').textContent);
        case 'title-descending':
          return b.querySelector('.card-title').textContent.localeCompare(a.querySelector('.card-title').textContent);
        case 'best-selling':
          return Math.random() - 0.5; // Random for demo
        default:
          return 0;
      }
    });
    
    // Animate product reordering
    products.forEach((product, index) => {
      product.style.order = index;
      product.style.opacity = '0';
      product.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        product.style.opacity = '1';
        product.style.transform = 'translateY(0)';
      }, index * 50);
    });
    
    showNotification(`Products sorted by ${sortValue}`, 'success');
  };
  
  // Set grid view
  window.setGridView = function(viewType) {
    currentView = viewType;
    const productGrid = document.getElementById('productGrid');
    const viewButtons = document.querySelectorAll('.view-toggle-btn');
    
    // Update active button
    viewButtons.forEach(btn => btn.classList.remove('active'));
    event.target.closest('.view-toggle-btn').classList.add('active');
    
    // Update grid class
    productGrid.classList.remove('list-view');
    if (viewType === 'list') {
      productGrid.classList.add('list-view');
    }
    
    // Animate transition
    const products = productGrid.querySelectorAll('.product-item');
    products.forEach((product, index) => {
      product.style.opacity = '0';
      product.style.transform = 'scale(0.9)';
      
      setTimeout(() => {
        product.style.opacity = '1';
        product.style.transform = 'scale(1)';
      }, index * 30);
    });
  };
  
  // Close urgency banner
  window.closeUrgencyBanner = function() {
    const banner = document.getElementById('urgencyBanner');
    banner.style.opacity = '0';
    banner.style.transform = 'translateY(100px)';
    setTimeout(() => {
      banner.style.display = 'none';
    }, 300);
  };
  
  // Auto-hide urgency banner after 10 seconds
  setTimeout(() => {
    const banner = document.getElementById('urgencyBanner');
    if (banner) {
      banner.style.opacity = '0.8';
    }
  }, 10000);
  
  // Intersection Observer for scroll animations
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animationDelay = Math.random() * 0.5 + 's';
        entry.target.classList.add('animate-fade-in');
      }
    });
  });
  
  document.querySelectorAll('.product-item').forEach(item => {
    observer.observe(item);
  });
  
  // Real-time social proof updates
  setInterval(() => {
    const socialProofCount = document.querySelector('.social-proof-count');
    if (socialProofCount) {
      let currentCount = parseInt(socialProofCount.textContent.replace(/,/g, ''));
      currentCount += Math.floor(Math.random() * 3) + 1;
      socialProofCount.textContent = currentCount.toLocaleString();
    }

{%- comment -%}
  Crowe Logic™ Metafield Callout
  Displays growing specifications in a visual format
{%- endcomment -%}

{{ 'component-metafield-callout.css' | asset_url | stylesheet_tag }}

<div class="crowe-metafield-callout{% if variant %} metafield-callout--{{ variant }}{% endif %}">
  <div class="metafield-callout__header">
    <h3 class="metafield-callout__title">
      {% if title %}{{ title }}{% else %}Growing Specifications{% endif %}
    </h3>
    <p class="metafield-callout__subtitle">
      {% if subtitle %}{{ subtitle }}{% else %}Optimal conditions for cultivation{% endif %}
    </p>
  </div>

  <div class="metafield-callout__grid">
    {%- if product.metafields.custom.co2_level != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 3H5C3.9 3 3 3.9 3 5V19C3 20.1 3.9 21 5 21H19C20.1 21 21 20.1 21 19V5C21 3.9 20.1 3 19 3ZM19 19H5V5H19V19Z" fill="currentColor"/>
            <path d="M8 17L12 13L16 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">CO₂ Level</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.co2_level }}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if product.metafields.custom.temperature != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M14 14.76V6C14 4.9 13.1 4 12 4C10.9 4 10 4.9 10 6V14.76C9.24 15.4 8.76 16.36 8.76 17.43C8.76 19.39 10.37 21 12.33 21C14.29 21 15.9 19.39 15.9 17.43C15.9 16.36 15.42 15.4 14.66 14.76H14Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">Temperature</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.temperature }}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if product.metafields.custom.substrate != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
            <path d="M12 18L12.5 20.5L15 21L12.5 21.5L12 24L11.5 21.5L9 21L11.5 20.5L12 18Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">Substrate</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.substrate }}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if product.metafields.custom.humidity != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2.69L17.25 7.94C19.41 10.1 19.41 13.9 17.25 16.06C15.09 18.22 11.29 18.22 9.13 16.06C6.97 13.9 6.97 10.1 9.13 7.94L12 2.69Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">Humidity</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.humidity }}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if product.metafields.custom.growth_time != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
            <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">Growth Time</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.growth_time }}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if product.metafields.custom.difficulty != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26 12,2" fill="currentColor"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">Difficulty</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.difficulty }}</span>
        </div>
      </div>
    {%- endif -%}

    {%- if product.metafields.custom.yield_estimate != blank -%}
      <div class="metafield-spec">
        <div class="metafield-spec__icon">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 13H11L9 15L13 19L15 17H21V13H15L17 11L13 7L11 9H3V13Z" fill="currentColor"/>
          </svg>
        </div>
        <div class="metafield-spec__content">
          <span class="metafield-spec__label">Expected Yield</span>
          <span class="metafield-spec__value">{{ product.metafields.custom.yield_estimate }}</span>
        </div>
      </div>
    {%- endif -%}
  </div>

  {%- if show_note -%}
    <div class="metafield-callout__note">
      <p>{{ note | default: "These specifications provide optimal growing conditions. Actual results may vary based on environmental factors." }}</p>
    </div>
  {%- endif -%}
</div>

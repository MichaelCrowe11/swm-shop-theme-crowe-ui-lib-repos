<style>
  /* Quantum Feature Icons */
  .quantum-feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    background: var(--quantum-gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .quantum-icon-3d {
    font-size: 2.5rem;
    transform-style: preserve-3d;
    animation: quantum-3d-rotate 6s linear infinite;
  }
  
  @keyframes quantum-3d-rotate {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
  }
  
  /* Timeline Styles */
  .quantum-timeline-wrapper {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }
  
  .quantum-timeline-line {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 2px;
    background: var(--quantum-gradient-primary);
    transform: translateX(-50%);
  }
  
  .quantum-timeline-item {
    position: relative;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
  }
  
  .quantum-timeline-item:nth-child(even) {
    flex-direction: row-reverse;
  }
  
  .quantum-timeline-dot {
    width: 20px;
    height: 20px;
    background: var(--quantum-gold);
    border-radius: 50%;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }
  
  .quantum-timeline-content {
    width: 45%;
    margin: 0 2.5%;
  }
  
  .quantum-timeline-item::before {
    content: attr(data-year);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -1.5rem;
    color: var(--quantum-gold);
    font-weight: 700;
    font-size: 0.875rem;
  }
  
  /* Newsletter Form */
  .quantum-newsletter-form {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .quantum-newsletter-form .quantum-input {
    flex: 1;
    min-width: 250px;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .quantum-timeline-line {
      left: 30px;
    }
    
    .quantum-timeline-item,
    .quantum-timeline-item:nth-child(even) {
      flex-direction: row;
    }
    
    .quantum-timeline-dot {
      left: 30px;
    }
    
    .quantum-timeline-content {
      width: calc(100% - 60px);
      margin-left: 60px;
    }
    
    .quantum-timeline-item::before {
      left: 60px;
      transform: none;
    }
    
    .quantum-newsletter-form .quantum-flex {
      flex-direction: column;
    }
    
    .quantum-newsletter-form .quantum-input {
      width: 100%;
    }
  }
</style>

<script>
  // Quantum Interactions
  document.addEventListener('DOMContentLoaded', function() {
    // Parallax scrolling for timeline
    const timelineItems = document.querySelectorAll('.quantum-timeline-item');
    
    const observerOptions = {
      threshold: 0.5,
      rootMargin: '0px 0px -100px 0px'
    };
    
    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '0';
          entry.target.style.transform = 'translateY(50px)';
          
          setTimeout(() => {
            entry.target.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }, 100);
          
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);
    
    timelineItems.forEach(item => {
      observer.observe(item);
    });
    
    // Newsletter form enhancement
    const newsletterForm = document.querySelector('.quantum-newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        const button = this.querySelector('.quantum-button');
        button.classList.add('quantum-pulse');
        
        // Remove animation after completion
        setTimeout(() => {
          button.classList.remove('quantum-pulse');
        }, 2000);
      });
    }
    
    // Add hover effects to feature cards
    const featureCards = document.querySelectorAll('.quantum-features .quantum-card');
    featureCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        const icon = this.querySelector('.quantum-icon-3d');
        if (icon) {
          icon.style.animationDuration = '1s';
        }
      });
      
      card.addEventListener('mouseleave', function() {
        const icon = this.querySelector('.quantum-icon-3d');
        if (icon) {
          icon.style.animationDuration = '6s';
        }
      });
    });
  });
</script>
